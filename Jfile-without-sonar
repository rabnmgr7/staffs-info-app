pipeline {
    agent any
    environment {
        scannerHome = tool 'sonar5.0'
    }
    stages {
        stage('Build') {
            steps {
                sh './img-build.sh'
            }
        }
        stage('UnitTest') {
            steps{
                sh './run-container.sh'
            }
        }
        stage('PushToRegistry') {
            steps {
                sh '''
                chmod +x img-push.sh
                ./img-push.sh'''
            }
        }
    }
}
